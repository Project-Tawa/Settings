<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:tint="@null" android:shape="rectangle">
            <corners android:radius="@dimen/progress_bar_corner_radius" />
            <size android:height="10.0dip" />
            <solid android:color="@null" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:tint="?android:colorControlActivated" android:shape="rectangle">
                <corners android:radius="@dimen/progress_bar_corner_radius" />
                <size android:height="10.0dip" />
                <solid android:color="@null" />
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="?android:colorControlActivated" android:shape="rectangle">
                <corners android:radius="@dimen/progress_bar_corner_radius" />
                <size android:height="10.0dip" />
                <solid android:color="@android:color/white" />
            </shape>
        </scale>
    </item>
</layer-list>